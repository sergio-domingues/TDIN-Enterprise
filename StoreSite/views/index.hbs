                <ul class="nav navbar-nav">
                    <li>
                        <a href="#">Check Order</a>
                    </li>
                    
                </ul>
                <div class="span12">
                    <form id="custom-search-form" action="/search" method="GET" class="form-search form-horizontal pull-right">
                        
